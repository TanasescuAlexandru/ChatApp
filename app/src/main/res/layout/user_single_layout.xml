<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userSingleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userSingleName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Default Status"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintStart_toEndOf="@+id/userChatImage"
        app:layout_constraintTop_toBottomOf="@+id/userSingleName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userChatImage"
        android:layout_width="80dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userSingleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/userChatImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Display Name"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/userChatImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lastSeenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userSingleName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="Online"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintStart_toEndOf="@+id/userChatImage"
        app:layout_constraintTop_toBottomOf="@+id/userSingleName" />

    <ImageView
        android:id="@+id/user_online_status"
        android:layout_width="19dp"
        android:layout_height="17dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/userSingleName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/online_icon" />
</android.support.constraint.ConstraintLayout>